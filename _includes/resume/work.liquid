<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] | sort: 'startDate' | reverse %}
  {% for content in work %}
    <li class="list-group-item">
      {% if content.startDate %}
        {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
        {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
        {% assign date = startDate | append: ' - ' | append: endDate %}
      {% else %}
        {% assign date = '' %}
      {% endif %}

      <div class="row mb-1">
        <div class="col-12 pl-0">
          <span class="badge font-weight-bold danger-color-dark text-uppercase"
                style="min-width: 75px">
            {{ date }}
          </span>
          {% if content.location %}
            <p class="location mt-1 mb-0">
              <i class="fa-solid fa-location-dot iconlocation"></i>
              {{ content.location }}
            </p>
          {% endif %}
        </div>
      </div>

      <div class="row">
        <div class="col-12 pl-0">
          <h6 class="title font-weight-bold md-4">
            <a href="{{ content.url }}">{{ content.position }}</a>
          </h6>
          <h6 class="md-4" style="font-size: 0.95rem">
            {{ content.name }}
          </h6>
          <h6 class="md-4"
              style="font-size: 0.95rem; font-style: italic">
            {{ content.summary }}
          </h6>
          <ul class="pl-4 items">
            {% for item in content.highlights %}
              <li><span class="item">{{ item }}</span></li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
